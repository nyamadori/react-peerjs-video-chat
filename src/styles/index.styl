base-line-height = 1.3
base-font-size = 16px

body {
  margin: 0;
  box-sizing: border-box;
  font-size: base-font-size
  line-height: base-line-height
}

.tasks
  margin: 0;
  list-style-type: none

.tasks-item
  &:after
    display: block
    content: ''
    clear: both

  &.completed
    > .tasks-item-description
      text-decoration: line-through
      color: #ddd

.tasks-item-description
  padding: 8px 16px
  padding-left: 0
  float: left

.tasks-item-nav
  float: right

  > a
    display: inline-block
    padding: 8px 16px 8px 8px
    text-decoration: none
    color: #ccc

    &:hover
      color: #aaa

.checkbox
  display: inline-block
  padding: 4px
  line-height: 1
  color: #333

  > .checkbox-border
    display: block
    position: relative
    font-size: 16px;
    border: 1px solid #ddd
    border-radius: 2px
    width: 14px
    height: 14px

    > .icon-check
      position: absolute
      top: -3px
      left: 1px
      color: green

.input-group
  position: relative

  .icon
    position: absolute
    left: 12px
    top: 50%
    margin-top: -8px
    color: #ddd

.tasks-item-check
  float: left
  padding: 10px

.tasks-form-description
  display: block
  padding: 8px 36px
  width: 100%
  border: none
  border-bottom: 1px solid #ddd
  font-size: base-font-size
  outline: none

.rc-calendar
  display: block;
  position: absolute;
  z-index: 1;
  background-color: #fff;
  border: 1px solid #ddd;
  padding: 4px 8px;
  border-radius: 6px;

.date-time-input
  font-size: 12px
  color: #000

  input
    border-style: none
    outline: none
    text-align: center
    padding: 0
    font-size: 12px
    border-radius: 4px

    &:focus
      background-color: #58B2DC

    &::-webkit-inner-spin-button
    &::-webkit-outer-spin-button
      -webkit-appearance: none
      margin: 0

  .input-year
    width: 30px

  .input-month
  .input-date
  .input-hour
  .input-minute
    width: 18px
    text-align: center

  .time
    margin-left: 8px
